<% layout('layout') -%>
<div class="row">
	<div class="col-lg-6 col-md-offset-3">
		<% if(errors.length > 0) { %>
			<div class="alert alert-danger alert-dismissable">
				<button type="button" class="close" data-dismmiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<%= errors %>
			</div>
		<% } %>
		<h1>Signup</h1>
		<form method="post">
			<div class="form-group">
				<label>Name</label>
				<input type="text" class="form-control" name="name" placeholder="Your Full Name">
			</div>
			<div class="form-group">
				<label>Email</label>
				<input type="email" class="form-control" name="email" placeholder="Your Primary Email">
			</div>
			<div class="form-group">
				<label>Password</label>
				<input type="password" class="form-control" name="password" placeholder="Account password">
			</div>
			<button class="btn btn-success">Submit</button>
		</form>
	</div>
</div>